block modifiers
  - body_modifier = body_modifier || ''
  - header_state = header_state || ''
  - current_page = current_page || ''

doctype html
html(itemscope itemtype="http://schema.org/WebPage")
  include ../_includes/head.pug
  body(class=body_modifier)
    input(type="checkbox").side-menu-check
    .menu-overlay
    .navigation-container.delay
      .side-menu-btn
      .current-page= current_page

    nav.side-menu
      ul.pages
        li.page(class=(current_page == 'Home' ? 'active' : ''))
          a.link(href="/") Home
        li.page(class=(current_page == 'Portraits' ? 'active' : ''))
          a.link(href="/portraits") Portraits

    header(class=header_state)
      .header-inner
        .logo
          span.name Marcus de Andrade
          span.text Fine artist

    main
      block content

    include ../_includes/footer.pug
