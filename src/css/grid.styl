.grid-wrap
  clear both
  max-width 1260px
  margin 0px auto
  padding 0px

.grid
  .grid-sizer, .grid-item
    width 100%

    +media-query( only screen, min-width 767px )
      width 50%
    +media-query( only screen, min-width 1080px )
      width 25%

  .grid-item
    cursor pointer
    padding 7px
    box-sizing border-box
    display inline-block
    overflow hidden
    text-align left
    vertical-align top
    float left
    opacity 0
    transition all .2s ease-out

    height 300px

    &.animate
      height auto

      transform translateY(200px)
      animation moveUp .65s ease-out forwards
    
    &:hover
      .overlay
        opacity 1
        transform scale(1)
        
      img
        filter brightness(.4)
    
    .overlay
      position absolute
      overflow hidden
      box-sizing border-box
      padding 15px
      width 80%
      height 80%
      left 10%
      top 10%
      color #fff
      border-bottom 1px solid #fff
      border-top 1px solid #fff
      
      transition opacity .35s, transform .35s
      transition-delay .2s
      transform scale(0, 1)
      text-transform: uppercase
      

      h2
        text-align center
        font-weight 600
        letter-spacing .125rem

      p
        text-align center
        font-size .75rem

    img
      width 100%
      height auto
      box-shadow rgba(0, 0, 0, 0.2) 0px 1px 3px 0px, rgba(0, 0, 0, 0.137255) 0px 1px 1px 0px, rgba(0, 0, 0, 0.117647) 0px 2px 1px -1px
      transition filter 0.35s 0.2s
