@import "../../node_modules/kouto-swiss"
normalize()
meyer-reset()
@import "_variables.styl"
@import "_animations.styl"
@import "_grid.styl"
@import "_footer.styl"
@import "_header.styl"
@import "_logo.styl"

body
  height 100%
  left 0
  right 0
  margin auto
  font 16px/1.5 "Open Sans","Helvetica Neue",Helvetica,arial,sans-serif
  overflow-x hidden
  text-rendering optimizeLegibility
  font-weight 300
  letter-spacing .1px
  -webkit-font-smoothing antialiased

  &.loading
    overflow hidden
    
::-webkit-scrollbar
  width 7px
  
::-webkit-scrollbar-track
  background #060606
 
::-webkit-scrollbar-thumb
  background #bdc3c7
  barder-radius 2px
  border 1px #060606 solid
    
main
  background secondary

  +media-query( only screen, min-width 640px )
    padding rem(5px) rem(20px)
  +media-query( only screen, min-width 960px )
    padding rem(10px) rem(50px)
  +media-query( only screen, min-width 1824px )  
    padding rem(10px) rem(200px)
