@keyframes swipeDown
  50%, 60%
    transform translate(0)
  100%
    transform translate3d(0, 0, 0)
    transform translate3d(0, 0, 0)

@keyframes fadeIn
  from
    opacity 0
  to
    opacity 1

@keyframes goTop
  0%
    height 100%
  to
    height 12.5rem

@keyframes fontSizeLogoName
  from
    font-size 1.875rem
  to
    font-size .875rem

@keyframes fontSizeLogoText
  from
    font-size 1.563rem

  to
    font-size .563rem

.swipe-down
  transform translate3d(0, -100%, 0)
  animation swipeDown 1.5s cubic-bezier(.3, 0, .2, .3) forwards

.fade-in
  opacity 0
  animation fadeIn .8s linear forwards

.fade-in.one
  animation-delay .8s

.fade-in.two
  animation-delay 1.6s
