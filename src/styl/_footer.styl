.footer
  background main
  padding rem(50px) rem(25px)
  font-size .75rem
  color secondary

  .footer-inner
    display flex
    height 100%

    ul
      list-style none
      margin-right 25px
      flex 0 0 auto

      .title
        font-weight bold

    p, a
      text-decoration none
      mainFont(300)
      color secondary !important
      text-align center
      margin 0

    a:hover
      color secondary
